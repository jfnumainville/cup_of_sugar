<%= simple_form_for([item, review],
                   data: { insert_in_list_target: "form",
                   action: "submit->insert-in-list#send" }) do |f|  %>
<%= f.input :description, :label => "Write a review about your experience with '#{item.name}'" %>
<%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
<%= f.button :submit, class:"button-gold"  %>
<% end %>
